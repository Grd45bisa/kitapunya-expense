{
  "name": "expense-tracker-backend",
  "version": "2.2.0",
  "description": "Backend untuk Expense Tracker dengan Firebase Auth, Google SSO, n8n dan Google Sheets",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "debug": "node debug.js",
    "start:debug": "set NODE_ENV=development&& node server.js",
    "test-config": "node test.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "auth-check": "curl -f http://localhost:3000/api/auth/status || exit 1",
    "lint": "eslint *.js routes/*.js utils/*.js middleware/*.js",
    "format": "prettier --write *.js routes/*.js utils/*.js middleware/*.js"
  },
  "keywords": [
    "expense-tracker",
    "firebase-auth",
    "google-sso",
    "n8n",
    "google-sheets",
    "receipt-analysis",
    "ocr",
    "authentication"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "firebase-admin": "^12.0.0",
    "google-auth-library": "^10.2.1",
    "google-spreadsheet": "^5.0.2",
    "googleapis": "^156.0.0",
    "jimp": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "eslint": "^9.15.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}